# BookVault Backend Environment Variables
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bookvault

# Authentication
AUTH_SECRET_KEY=your-super-secret-key-change-this-in-production
AUTH_ALLOW_REGISTRATION=true
AUTH_REQUIRE_VERIFICATION=false

# Flask Configuration
FLASK_APP=app
FLASK_ENV=development
FLASK_DEBUG=true

# File Storage
EXPORT_FOLDER=export_data

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Production Settings (for deployment)
# DATABASE_URL=postgresql://user:pass@host:port/database
# FLASK_ENV=production
# FLASK_DEBUG=false
# FRONTEND_URL=https://your-frontend.vercel.app